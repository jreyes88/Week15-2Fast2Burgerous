<div class="container">
    <div class="jumbotron">

        <div id="addBurgerForm">

            <h2 class="label">Add a Burger</h2>
            <form class="create-update-form" action="burgers/create" method="POST">

                <div class="form-group">
                    <label for="ca">Burger Name:</label>
                    <input type="text" id="ca" name="name">
                </div>
                <button type="submit">Add Burger to Plate</button>
            </form>
        </div>
    </div>

    <div class="mainContent">

        <div id="BurgersOnPlate">
            <h2>Burgers on your plate!</h2>
            <ul>
                {{#each burgers}}
                    {{#unless this.devoured}}
                        <li class="burgerList">
                            {{this.name}}

                            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                                <input type="hidden" name="devoured" value="true">
                                <button type="submit">DEVOUR ME!</button>
                            </form>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div id="burgersDevoured">
            <h2>Burgers that are devoured!</h2>
            <ul>
                {{#each burgers}}
                    {{#if this.devoured}}
                        <li>
                            {{this.name}}
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>